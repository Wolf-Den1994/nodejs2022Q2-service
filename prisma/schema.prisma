// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  version Int @default(autoincrement())

  createdAt Int
  updatedAt Int

  login String
  password String
}

model Artist {
  id String @id @default(uuid())
  grammy Boolean @default(false)
  name String

  Favorites Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId Int?
}

model Album {
  id       String  @id @default(uuid())
  name     String
  year     Int

  artistId String?

  Favorites Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId Int?
}

model Track {
  id       String  @id @default(uuid())
  name     String
  duration Int

  artistId String?
  albumId  String?

  Favorites Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId Int?
}

model Favorites {
  id Int @id @default(0)

  artists Artist[]
  albums Album[]
  tracks Track[]
}