// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  version Int @default(autoincrement())

  createdAt Int
  updatedAt Int

  login String
  password String

  @@map("users")
}

model Artist {
  id String @id @default(uuid())
  grammy Boolean @default(false)
  name String

  @@map("artists")
}

model Album {
  id       String  @id @default(uuid())
  name     String
  year     Int

  artistId String?

  @@map("albums")
}

model Track {
  id       String  @id @default(uuid())
  name     String
  duration Int

  artistId String?
  albumId  String?

  @@map("tracks")
}

model Favorites {
  id Int @id @default(0)

  artists String[]
  albums String[]
  tracks String[]

  @@map("favorites")
}